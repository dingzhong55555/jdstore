<div class="row">
  <!-- ↓↓↓ 产品图片 代码块 ↓↓↓ -->
  <div class="col-md-7">
    <div class="row">

      <div class="panel panel-default product_item">
        <% if @product.image.present? %>
          <%= image_tag(@product.image.medium.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      </div>

      <div class="panel panel-default" style="height:130px;">
        more img
      </div>

    </div>
  </div>
  <!-- ↑↑↑ 产品图片 代码块 ↑↑↑ -->

 <!-- ↓↓↓ 产品选购 代码块 ↓↓↓ -->
  <div class="col-md-5">
    <div class="panel panel-default" style="height:700px;">

      <div class="panel panel-default">
        <h2><%= @product.title %></h2>
      </div>

      <div class="panel panel-default" style="height:200px;">
        <p>
          <%= @product.description %>
        </p>
      </div>

      <div class="panel panel-default" style="height:100px;">数量：<%= @product.quantity %></div>

      <div class="project-price panel panel-default" style="height:100px;">
         <h2>￥ <%= @product.price %></h2>
       </div>

      <div class="pull-right">
        <% if @product.quantity.present? && @product.quantity > 0%>
        <%= link_to("加入购物车", add_to_cart_product_path(@product), :method => :post, :class => "btn btn-primary btn-lg btn-danger") %>
        <% else %>
         已销售以空，无法购买
        <% end%>
      </div>

    </div>
  </div>
  <!-- ↓↓↓ 产品选购 代码块 ↓↓↓ -->
</div>

 <hr>
 <!-- ↓↓↓ 产品评价 代码块 ↓↓↓ -->
 <div class="row">
   <div class="col-md-3">
     <div class="panel panel-default" style="height:600px;">
       购买须知
     </div>
   </div>
   <div class="col-md-9">
     <div class="panel panel-default" style="height:600px;">
       用户评价
     </div>
   </div>
 </div>
