<div class="row">
   <div class=" col-md-12">

    <h2 class="text-center"> 购物明细 </h2>

    <table class="table">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </td>
            <td>
              <%= cart_item.product.price %>
            </td>

            <td>
              <%= cart_item.quantity %>
            </td>

          </tr>
        <% end %>

      </tbody>
    </table>

    <hr>

    <div class="total clearfix">
      <span class="pull-right">
        总计 <%= render_cart_total_price(current_cart) %> CNY
      </span>
    </div>
</div>

    <hr>

<div class=" col-md-6 col-md-offset-3">
    <h2 class="text-center"> 订单资讯 </h2>

    <div class="order-form">

      <%= simple_form_for @order do |f| %>

          <div class="row">
            <div class="form-group">
              <legend> 订购人</legend>
              <%= f.input :billing_name  %>
            </div>
            <div class="form-group">
              <%= f.input :billing_address  %>
            </div>

            <div class="form-group">
             <legend> 收货人</legend>
             <%= f.input :shipping_name  %>
            </div>
            <div class="form-group">
              <%= f.input :shipping_address  %>
            </div>

            <div class="checkout">
                <%= f.submit "提交订单", class: "btn btn-lg btn-danger pull-right", data: { disable_with: "Submitting..." } %>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</div>
